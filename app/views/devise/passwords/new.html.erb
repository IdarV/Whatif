<div style="display: table" class="center-block">
  <div style="border-bottom: 1px solid #18BC9C;margin-top: 10%;margin-bottom:1%;" class="center-block"></div>
  <br><br>
  <h1 class="header text-center">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "Send me instructions" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
