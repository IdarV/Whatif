<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-condensed table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Answered</th>
      <th>Common</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.answered %></td>
        <td><%= user.common %></td>
        <td><img src="<%= user.picture %>" alt="imagefromdatabase" style="width:100px;height:auto" class="img-thumbnail"></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

